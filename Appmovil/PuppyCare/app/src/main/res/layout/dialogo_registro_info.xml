<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:elevation="20dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="25dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textColor="@color/negro"
            android:text="Complete Info"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />


        <EditText
            android:id="@+id/NombresUser"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/edittext_bg"
            android:textColorHint="@color/negro"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Ingrese nombres" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/ApellidosUser"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/negro"
            android:background="@drawable/edittext_bg"
            android:hint="Ingrese apellidos" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/CedulaUser"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/negro"
            android:background="@drawable/edittext_bg"
            android:hint="Ingrese cedula" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/TelefonoUser"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/negro"
            android:background="@drawable/edittext_bg"
            android:hint="Ingrese telefono" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/CelularUser"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/negro"
            android:background="@drawable/edittext_bg"
            android:hint="Ingrese celular" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <EditText
            android:id="@+id/CiudadUser"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColorHint="@color/negro"
            android:background="@drawable/edittext_bg"
            android:layout_height="40dp"
            android:hint="Ingrese Ciudad de residencia" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <Button
            android:id="@+id/btEnviarInfo"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@drawable/button_bg"
            android:textColor="#fff"
            android:textSize="20sp"
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:text="Enviar" />


    </LinearLayout>

</android.support.constraint.ConstraintLayout>